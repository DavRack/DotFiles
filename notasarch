# instalar xclip
# hacer carpeta capturas en Img
# reescribir AutoInstall para arch
# buscar forma de instalar ofline el driver del wifi hp x360 a la hora de instalar arch
#
/usr/local/bin/audiofix
#!/bin/bash
hda-verb /dev/snd/hwC0D0 0x20 SET_COEF_INDEX 0x67
hda-verb /dev/snd/hwC0D0 0x20 SET_PROC_COEF 0x3000

cambiar disposici贸n de teclado

sudo localectl 

#Instalaci贸n

#crear usb booteable 
dd bs=4M if=path/to/archlinux.iso of=/dev/sdx status=progress oflag=sync

# bootear desde el usb
# cargar la distribuci贸n del teclado
loadkeys la-latin1
# establecer el tiempo
timedatectl set-ntp true

crear particiones

# montar root
mount /path/to/part /mnt

#montar boot
mkdir /mnt/boot
mount /path/to/boot /mnt/boot

# instalar algunos paquetes

pacstrap /mnt linux linux-firmware intel-ucode neovim base base-devel networkmanager man-db man-pages inetutils netctl 

# generar fstab

genfstab -U /mnt >> /mnt/etc/fstab

# entrar a la instalaci贸n en /mnt
arch-chroot /mnt

# establecer uso horario
ln -sf /usr/share/zoneinfo/America/Bogota /etc/localtime

# reloj del hardware
hwclock --systohc

# generar archivos de localectl

echo "en_US.UTF-8 UTF-8" >> /etc/locale.gen
echo "es_CO.UTF-8 UTF-8" >> /etc/locale.gen

locale-gen

echo "LANG=es_CO.UTF-8" > /etc/locale.conf

echo "KEYMAP=la-latin1" > /etc/vconsole.conf

# nombre del equipo

echo "DavidDesktop" > /etc/hostname

echo "127.0.0.1         localhost" >> /etc/hosts
echo "::1               localhost" >> /etc/hosts
echo "127.0.1.1         DavidDesktop.localhost DavidDesktop" >> /etc/hosts

#definir clave para el root

passwd

# instalar bootloader

bootctl --path=/boot install
cd /boot/loader




super+comma 
    xbacklight -inc 10 -fps 60
super+m 
    xbacklight -dec 10 -fps 60
XF86AudioMute
    amixer -D pulse sset Master toggle -q
    #amixer -q -D pulse set Master toggle
XF86AudioRaiseVolume 
    amixer -q -M set Master 5%+
XF86AudioLowerVolume 
    amixer -q -M set Master 5%-
XF86AudioPlay 
    playerctl play-pause  
XF86AudioNext 
    playerctl next  
XF86AudioPrev 
    playerctl previous  

# aplicaciones
super+Return 
    st

super+p 
    rofi -show drun

super+y
    nautilus

super+u 
    brave

super+i 
    flameshot gui -p ~/multimedia/img/capturas

super+o 
    flameshot full -p ~/multimedia/img/capturas

#bspwm
super+w
    bspc node -t \~fullscreen

# restart bspwm
super+shift+r
    bspc wm -r

super+n
    bspc config window_gap {0, 12}

# kill window
super+q
    xdo close

# focus windows
super+{h, j, k, l}
    bspc node -f {west,south,north,east}

# move windows
super+shift+{h,j,k,l}
    bspc node -s {west,south,north,east}

# expand windows
super+ctrl+{h, j, k, l}
  bspc node -z {left -20 0 || bspc node -z right -20 0, \
                bottom 0 20 || bspc node -z top 0 20,\
                top 0 -20 || bspc node -z bottom 0 -20,\
                right 20 0 || bspc node -z left 20 0}

# send window to desktop
super+shift+{f,d,s,a,v,c,x,z}
    bspc node -d {1-8}

super+{f,d,s,a,v,c,x,z}
    bspc desktop -f {1-8}

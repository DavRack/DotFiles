color=#f3f4f5
separator_block_width=15
markup=none

[volumen]
command=echo -n "🔊 "; amixer sget Master | awk -F"[][]" '/dB/ { print $2 }'  
instance=Master
interval=once
signal=10

[brightness]
command=sleep 0.3s ;echo "☀️ $(xbacklight -get)"
instance=Master
interval=once
signal=11

[battery]
command=acpi | awk '{print $3 $4}' | sed "s/\,//g" | sed "s/Discharging/🔋/g" | sed "s/Unknown/⚡/g" | sed "s/Charging/⚡/g" | sed "s/Full/✔️ /g"
interval=2

[cputemp]
label=♨️
command=sensors -A coretemp-isa-0000 | awk '/^Package/ {print $4}' | cut -c 2-
interval=10

[ram]
command=echo -n "  "; free -h | awk '/^Me/ {print $3 "/" $2}'
interval=10

[disk-home]
command=echo -n "  "; df -h -P -l "$HOME" | awk '/\/.*/ { print $4; exit 0 }'
interval=30

[time]
command=echo -n "  "; date '+%a, %d %b %H:%M'
interval=10

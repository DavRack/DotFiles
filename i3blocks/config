color=#f3f4f5
separator_block_width=15
markup=none

[cputemp]
command=echo -n "♨️ "; sensors -A coretemp-isa-0000 | awk '/^Package/ {print $4}' | cut -c 2-
interval=10

[ram]
command=echo -n "  "; free -h | awk '/^Me/ {print $3 "/" $2}'
interval=10

[disk-home]
command=echo -n "  "; df -h -P -l "$HOME" | awk '/\/.*/ { print $4; exit 0 }'
interval=30

[time]
command=echo -n "  "; date '+%a, %d %b %H:%M'
interval=10
